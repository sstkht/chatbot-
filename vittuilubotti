# vittuilubot 1.0
import random
import time

print ("Tervetuloa vittuilemaan botille!")

#Kysyy käyttäjän nimeä
time.sleep (1)
nimi = input ("kenelle tänään vittuillaan?: ")

time.sleep (1)
print (f"{nimi}? Hahaha!")

#Varmistaa käyttäjän nimen
time.sleep (1)
nimi2 = input("Oikeesti? =D: ")

vastaus1 = ["joo", "jep", "je", "jo", "j", "kyllä", "kyl", "k"]

#if true (kyllä)
if nimi2 in vastaus1:  
    time.sleep (1)
    print ("...")
    time.sleep (1)
    print ("Pakko kai se on sitten uskoo... xD")

#if false (ei)    
else: 
    time.sleep (1)
    print ("No sitähän minäkin")
    time.sleep (1)
    
#pyytää käyttäjältä uuden nimen
    nimi3 = input ("No annahan nyt se oikea nimi : ")
    
#if true (sama kuin nimi)
    if nimi3 == (nimi): 
        time.sleep(1)
        print ("Heti kärkeen koitetaan koijata apinaa")
        
#if false (eri kuin nimi)
    else: 
        time.sleep (1)
        print ("No oliko se nyt niin vaikeeta? Vai etkö kehdannut sanoa? En olis kyllä ite sanonut =D")
        
